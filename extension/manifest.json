{
  "manifest_version": 3,
  "name": "Text Capture & Summarize",
  "version": "1.0",
  "permissions": [
      "activeTab",
      "scripting"
  ],
  "host_permissions": [
      "http://localhost:5000/*"
  ],
  "action": {
      "default_popup": "popup.html"
  },
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
  }]
}